<UserControl x:Name="userControl" x:Class="MBT_InputBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mmultitool"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="250">
    <Grid>
        <TextBox x:Name="TextBox1" MaxLength="12" Margin="2"/>
        <Rectangle x:Name="ValidatorRect"  StrokeThickness="{Binding ValidatorStrokeThickness, ElementName=userControl}"/>
    </Grid>
</UserControl>
