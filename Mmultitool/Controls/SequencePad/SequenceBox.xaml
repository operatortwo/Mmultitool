<UserControl x:Class="SequenceBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mmultitool"
             xmlns:duc="clr-namespace:DailyUserControls;assembly=DailyUserControls"
             mc:Ignorable="d"  Height="120" Width="145"  BorderBrush="{DynamicResource LabelBorderBrush1}" BorderThickness="1,1,1,1" Background="#FFEFF7FF" Loaded="UserControl_Loaded" HorizontalAlignment="Left" VerticalAlignment="Top" >
    <UserControl.Resources>
        <SolidColorBrush x:Key="LabelBorderBrush1" Color="#FF929292"/>
        <SolidColorBrush x:Key="LabelBackground1" Color="#FFFAFFDE"/>
    </UserControl.Resources>
    <DockPanel x:Name="MainPanel">
        <Label x:Name="LblName" DockPanel.Dock="Top" Content="Sequence Name" VerticalAlignment="Top" Height="20" Padding="0,0,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="{DynamicResource LabelBorderBrush1}" BorderThickness="0,0,0,1" Focusable="True" >
            <Label.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF6FFA6" Offset="0"/>
                    <GradientStop Color="#FFFFE366" Offset="1"/>
                </LinearGradientBrush>
            </Label.Background>
            <Label.ContextMenu>
                <ContextMenu HorizontalOffset="15">
                    <MenuItem x:Name="CtxMi_ImportMidiPattern" Header="Import Midi-Pattern">
                        <MenuItem.Icon>
                            <Image Source="/Mmultitool;component/Resources/Images/Import_x22.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="CtxMi_RemoveMe" Header="Remove Me">
                        <MenuItem.Icon>
                            <Image Source="/Mmultitool;component/Resources/Images/BlueMinus_x24.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </Label.ContextMenu>
        </Label>

        <!-- define transparent Background to receive MouseRightButton to prevent ContextMenu of SequencePad -->
        <!-- ContextMenuOpening set e.Handled to True except Controls with own ContextMenus -->
        <Grid x:Name="MainGrid" Background="#00000000" >
            <duc:ToggleButton x:Name="TgbtnSync" HorizontalAlignment="Left" VerticalAlignment="Top" ClickMode="Press" TextChecked="Sync" TextUnchecked="Sync" FontSize="11" BackgroundChecked="#FFF9E293" BackgroundUnchecked="#FFEFF7FF"/>
            <duc:NumericUpDown x:Name="NudChannel" BorderBrush="{DynamicResource LabelBorderBrush1}" BorderThickness="1,1,1,1" MaximumValue="15" UpDownColMinWidth="15" Background="{DynamicResource LabelBackground1}" HorizontalAlignment="Left" Width="42" Height="24" VerticalAlignment="Top" Margin="102,0,0,0" MouseWheelHandled="True"/>
            <CheckBox x:Name="CbForceToChannel" Content="Chn" HorizontalAlignment="Left" Margin="103,27,0,0" VerticalAlignment="Top" Padding="1,-1,0,0" IsChecked="True"/>
            <Label x:Name="lblBeatcount" Content="0" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0,0,0,0" Margin="114,53,0,0" HorizontalContentAlignment="Right" Width="27"/>
            <duc:ProgressRing x:Name="ProgressRing1" Width="66" Height="66" ProgressValue="40" RingFill="#FF90C1EE" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="26,5,0,0"/>
            <duc:ToggleButton x:Name="TgbtnPlay" Width="24" Height="24" Text="" Image="/Mmultitool;component/Resources/Images/Play_bw_x22.png" ImageUnchecked="/Mmultitool;component/Resources/Images/Play_bw_x22.png" TextChecked="" TextUnchecked="" ImageChecked="/Mmultitool;component/Resources/Images/Play_x22.png" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="47,26,0,0"/>
            <duc:ToggleButton x:Name="TgbtnLoop" ClickMode="Press" TextChecked="Loop" TextUnchecked="Loop" HorizontalAlignment="Left" BackgroundUnchecked="#FFF7F7F7" BackgroundChecked="#FFA4E892" Height="22" VerticalAlignment="Top" Margin="30,76,0,0" Width="40" BorderBrush="{DynamicResource LabelBorderBrush1}"/>
            <duc:NumericUpDown x:Name="NudLoopCount" Height="24" BorderBrush="{DynamicResource LabelBorderBrush1}" BorderThickness="1,1,1,0" MaximumValue="32" UpDownColMinWidth="15" Value="1" Background="{DynamicResource LabelBackground1}" MinimumValue="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="42" Margin="75,0,0,0" MouseWheelHandled="True"/>
            <Label x:Name="LblTriggerIn" Background="{DynamicResource LabelBackground1}" Content="In" HorizontalAlignment="Left" VerticalAlignment="Top" Width="25" Height="20" Padding="0,0,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="{DynamicResource LabelBorderBrush1}" BorderThickness="0,1,1,0" Margin="0,78,0,0" AllowDrop="True">
                <Label.ContextMenu>
                    <ContextMenu>
                        <MenuItem x:Name="MiLblTrigIn_RemoveWire" Header="remove wire"/>
                    </ContextMenu>
                </Label.ContextMenu>
            </Label>

            <Label x:Name="LblTriggerOut" Background="{DynamicResource LabelBackground1}" Content="Out" HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Padding="0,0,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="{DynamicResource LabelBorderBrush1}" BorderThickness="1,1,0,0" Margin="118,78,0,0" Width="25" >
                <Label.ContextMenu>
                    <ContextMenu>
                        <MenuItem x:Name="MiLblTrigOut_RemoveWire" Header="remove wire"/>
                    </ContextMenu>
                </Label.ContextMenu>
            </Label>

        </Grid>
    </DockPanel>
</UserControl>
