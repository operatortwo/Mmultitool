<UserControl x:Class="SequencePad"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mmultitool"
             xmlns:duc="clr-namespace:DailyUserControls;assembly=DailyUserControls"
             xmlns:mmt="clr-namespace:Mmultitool"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel>
            <Border VerticalAlignment="Top" DockPanel.Dock="Top" BorderBrush="#FF688CAF" BorderThickness="1,1,1,0">
                <duc:TabControlExpander DockPanel.Dock="Top" Height="100" HeaderPanelBackground="#FFE9F8FF">
                    <TabItem Header="Start">
                        <Grid Background="#FFF2FDF5"/>
                    </TabItem>
                </duc:TabControlExpander>
            </Border>
            <Border VerticalAlignment="Top" DockPanel.Dock="Top" BorderBrush="#FF688CAF" BorderThickness="1,1,1,0">
                <Grid x:Name="InfoStrip" VerticalAlignment="Top" Height="22" DockPanel.Dock="Top" Background="#FFEFFCFF"/>
            </Border>
            <Border DockPanel.Dock="Top" BorderBrush="#FF688CAF" BorderThickness="1,1,1,1">
                <ScrollViewer x:Name="MainPadScroll" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Focusable="False">
                    <Grid x:Name="MainPad" Background="#FFEDEFC4" Margin="5,5,5,5">
                        <mmt:SequenceVoicePanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="127,83,0,0"/>
                        <mmt:SequenceBox HorizontalAlignment="Left" VerticalAlignment="Top" Margin="461,83,0,0"/>
                    </Grid>
                </ScrollViewer>
            </Border>



        </DockPanel>
    </Grid>
</UserControl>
